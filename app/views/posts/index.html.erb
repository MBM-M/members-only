<h1>All Posts</h1>

<% @posts.each do |post| %>
  <div>
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>

    <% if user_signed_in? && post.user.present? %>
      <p>Author: <%= post.user.name %></p>
    <% elsif post.user.nil? %>
      <p>Author: Unknown</p>
    <% end %>
  </div>
<% end %>

<!-- Link to the 'new' post page (to create a new post) -->
<% if user_signed_in? %> <!-- Only show the link to signed-in users -->
  <%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>
<!-- Sign Out Button -->
  <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
<% else %>
  <!-- Sign In Button -->
  <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-success' %>
<% end %>